Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1) Canonical HTTPS + non-www
  RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
  RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

  # 2) WordPress hanya di /articles
  RewriteRule ^articles(?:/|$) - [L]

  # 3) Static assets (kalau memang aset kamu ada di /public/assets dst)
  RewriteRule ^(assets|css|js|images|uploads)(/.*)?$ public/$0 [L]

  # 4) Allow real files/dirs di root (jika ada)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 5) Semua sisanya -> CI4
  RewriteRule ^ public/index.php [L,NC,QSA]
</IfModule>
