Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # -------------------------
  # Canonical HTTPS + non-www
  # -------------------------
  RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
  RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

  # -------------------------
  # Keep WordPress on /articles
  # -------------------------
  RewriteRule ^articles(?:/|$) - [L]

  # -------------------------
  # Allow real files in root (robots, sitemap, dll)
  # -------------------------
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # -------------------------
  # SEO Redirect: old WP root slug -> /articles/<slug>
  # (Whitelist CI4 routes biar gak ikut ke WP)
  # -------------------------
  RewriteRule ^(?!solutions(?:/|$))\
(?!services(?:/|$))\
(?!company(?:/|$))\
(?!resources(?:/|$))\
(?!contact(?:/|$))\
(?!contact-us(?:/|$))\
(?!search(?:/|$))\
(?!home(?:/|$))(.+)$ articles/$1 [R=301,L]

  # -------------------------
  # CI4 front controller
  # -------------------------
  RewriteRule ^(.*)$ public/index.php/$1 [L,NC,QSA]
</IfModule>
